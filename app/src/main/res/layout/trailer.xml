<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/trailer_container"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/colorPrimary"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:onClick="playTrailer"
            android:visibility="invisible"
            android:contentDescription="@string/content_description_play_button"
            app:layout_constraintBottom_toTopOf="@+id/trailer_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trailer_container"
            app:srcCompat="@android:drawable/ic_media_play" />


        <TextView
            android:id="@+id/trailer_label_tv"
            style="@style/VoteCountStyleWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="@string/trailer_label"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/playButton"
            app:layout_constraintStart_toEndOf="@+id/playButton"
            app:layout_constraintTop_toBottomOf="@+id/playButton" />

        <TextView
            android:id="@+id/trailer_error_tv"
            style="@style/VoteCountStyleWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/trailer_error_msg"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/playButton"
            app:layout_constraintStart_toEndOf="@+id/playButton"
            app:layout_constraintTop_toBottomOf="@+id/playButton" />

        <ProgressBar
            android:id="@+id/trailer_loading_pb"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/trailer_container"
            app:layout_constraintTop_toBottomOf="@+id/trailer_container"
            app:layout_constraintStart_toEndOf="@+id/trailer_container"
            app:layout_constraintEnd_toStartOf="@+id/trailer_container"/>

    </android.support.constraint.ConstraintLayout>
</layout>
